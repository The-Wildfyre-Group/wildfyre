
<%= form_for @user, :html => {:class => "panel form-horizontal form-bordered"} do |f| %>
        
  <%= f.fields_for :user_profile_pictures, :html => {:multipart => true} do |builder| %>
      
    <%= builder.file_field :photo %><br>
                                      
  <% end %>
       

First Name:<%= f.text_field :first_name, class: "form-control", placeholder: "First name." %><br>
			
Middle Name: <%= f.text_field :middle_name, class: "form-control", placeholder: "middle name." %><br>
					
Last Name: <%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %><br>
					
Email: <%= f.email_field :email, class: "form-control", placeholder: "name@domain.com"  %><br>

	<%= f.fields_for :profile, @profile do |builder| %>

	Mobile: <%= builder.text_field :mobile_phone_number, class: "form-control"  %><br>
	
	Work Phone: <%= builder.text_field :work_phone_number, class: "form-control"  %><br>
	
	Personal Email: <%= builder.text_field :personal_email, class: "form-control"  %><br>
	
	Work Email: <%= builder.text_field :work_email, class: "form-control"  %><br>
	
	Home Phone Number: <%= builder.text_field :home_phone_number, class: "form-control"  %><br>
	
	Website 1:<%= builder.text_field :website_1, class: "form-control"  %><br>
	
	Website 2: <%= builder.text_field :website_2, class: "form-control"  %><br>

	Title: <%= builder.text_field :title, class: "form-control"  %><br>

	Company: <%= builder.text_field :company, class: "form-control"  %><br>
	
	Street Address:<%= builder.text_field :street_address, class: "form-control"  %><br>
	
	<%= builder.select(:city, User.cities_list.sort, {prompt: "Select City"}, {:class => "form-control"})%><br>
	
	<%= builder.select(:state, User.states_list.sort, {prompt: "Select State"}, {:class => "form-control"})%><br>

	<%= builder.select(:country, User.countries_list.sort, {prompt: "Select Country"}, {:class => "form-control"})%><br>
	
	Zipcode: <%= builder.text_field :zipcode, class: "form-control"  %><br>

	Twitter: <%= builder.text_field :twitter, class: "form-control"  %><br>
                    
	Instagram: <%= builder.text_field :instagram, class: "form-control"  %><br>
                    
	Facebook: <%= builder.text_field :facebook, class: "form-control"  %><br>
 
	Linkedin: <%= builder.text_field :linkedin, class: "form-control"  %><br>

	Bio: <%= builder.text_area :bio, class: "form-control", cols: 50, rows: 10, placeholder: "Describe yourself." %><br>
	
	Married: <%= builder.check_box :married, class: "form-control"  %><br>
	
	Kids: <%= builder.check_box :kids, class: "form-control"  %><br>
	
	Anniversary: <%= builder.date_field :anniversary, class: "form-control"  %><br>
	
	Birthday: <%= builder.date_field :birthday, class: "form-control"  %><br>
	
	Number of Kids: <%= builder.text_field :number_of_kids, class: "form-control"  %><br>
	
	Undergraduate School: <%= builder.text_field :undergraduate_school, class: "form-control", placeholder: "College/University" %><br>
                                 
	Undergraduate Major: <%= builder.text_field :undergraduate_major, class: "form-control", placeholder: "Study of Degree" %><br>
                               
	Undergraduate Year:<%= builder.text_field :undergraduate_year, class: "form-control", placeholder: "Year" %><br>
            
	Undergraduate Degree: <%= builder.select(:undergraduate_degree, ["BA", "BS", "BSE", "BBA", "BFA"], {prompt: "Degree"}, {:class => "form-control"})%><br>
                                
	Graduate School: <%= builder.text_field :graduate_school, class: "form-control", placeholder: "College/University" %><br>
 
	Graduate Major:<%= builder.text_field :graduate_major, class: "form-control", placeholder: "Study of Degree" %><br>
 
	Graduate Year:<%= builder.text_field :graduate_year, class: "form-control", placeholder: "Year" %><br>

	Graduate Degree: <%= builder.select(:graduate_degree, ["PhD", "JD", "MD"], {prompt: "Degree"}, {:class => "form-control"})%><br>
   
	Doctorate School: <%= builder.text_field :doctorate_school, class: "form-control", placeholder: "College/University" %><br>
  
	Doctorate Major: <%= builder.text_field :doctorate_major, class: "form-control", placeholder: "Study of Degree" %><br>

	Doctorate Year: <%= builder.text_field :doctorate_year, class: "form-control", placeholder: "Year" %><br>

	Doctorate Degree: <%= builder.select(:doctorate_degree, ["MA", "MS", "MSE", "MFA"], {prompt: "Degree"}, {:class => "form-control"})%><br>
 
	Hometown: <%= builder.select(:hometown, User.cities_list.sort, {prompt: "Select Location"}, {:class => "form-control"})%><br>

	Certifications: <%= builder.text_field :certifications, class: "form-control", placeholder: "Certifications" %><br>
 
	Industries: <%= builder.text_area :industries, rows: "2", class: "form-control", placeholder: "Industries" %><br>

	Skills: <%= builder.collection_select :skills, Skill.skills.sort, :to_s, :to_s, {include_blank: false}, {:multiple => true, :style => "width:100%", :id => "select-skills", :class => "form-control", :placeholder => "Financial Modeling, Portfolio Management..."  } %><br>
     
	Interests: <%= builder.text_area :interests, rows: "10", class: "form-control", placeholder: "Interests" %><br>
	
	<% end %>
	

Current Password: <%= f.password_field :current_password, label:false, placeholder:"", :class => "form-control" %><br>

New Password: <%= f.password_field :password, label:false, placeholder:"", :class => "form-control" %><br>

Password Confirmation: <%= f.password_field :password_confirmation, label:false, placeholder:"", :class => "form-control" %><br>
	

<%= f.submit "Save changes", class: "btn btn-block btn-primary btn-lg" %>

<% end %>
   

