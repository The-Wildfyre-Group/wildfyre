<%= form_for @task, html: {data: {remote: true}} do |f|   %>
  <%= f.text_field  :name  %>
  <%= f.text_field  :notes  %>
  End Date & Time: <%= f.date_field :end_day %><%= f.time_field :end_time %><br><br>
  Notes: <%= f.text_area :notes %><br>
  Public: <%= f.check_box :public %><br>
  Expected Duration: <%= f.text_field :duration_expected %><%= f.text_field :duration_expected_units %><br><br>
  Priority: <%= f.text_field :priority %><br><br>
  Source: <%= f.text_field :source %><br><br>
  Recurring: <%= f.text_field :recurring %> <%= f.text_field :recurring_time %><br><br>
   <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Select Category"}, { :multiple => false, :style => "width:100%", :id => "multi"  } %>

  
  <%= f.submit :submit %>
<% end %>


