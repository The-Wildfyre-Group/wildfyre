<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">New task</h4>
      </div>
      <div class="modal-body">
		<%= form_for @task, html: {id: 'task-form', data: {remote: true}} do |f|   %>
		  Name: <%= f.text_field  :name  %><br>
		  <!-- Start Date & Time: --> <%#= f.date_field :start_day %><%#= f.time_field :start_time %><br>
		  End Date & Time: <%= f.date_field :end_day %><%= f.time_field :end_time %><br><br>
		  Notes: <%= f.text_area :notes %><br>
		  Public: <%= f.check_box :public %><br>
		  Expected Duration: <%= f.text_field :duration_expected %><%= f.text_field :duration_expected_units %><br><br>
		  Priority: <%= f.text_field :priority %><br><br>
		  Source: <%= f.text_field :source %><br><br>
		  Recurring: <%= f.text_field :recurring %> <%= f.text_field :recurring_time %><br><br>
          <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Select Category"}, { :multiple => false, :style => "width:100%", :id => "multi"  } %>
		  <%= f.collection_select :site_id, Site.all, :id, :name, {prompt: "Select Site"}, { :multiple => false, :style => "width:100%", :id => "multi"  } %>
		  <%= f.collection_select :project_id, Project.all, :id, :name, {prompt: "Select Project"}, { :multiple => false, :style => "width:100%", :id => "multi"  } %>
		  <%= f.collection_select :to_do_id, ToDo.all, :id, :name, {prompt: "Select Item"}, { :multiple => false, :style => "width:100%", :id => "multi"  } %>
		  <%= f.collection_select :user_ids, User.all, :id, :first_name , {prompt: "Assign to User"}, { :multiple => true, :style => "width:100%", :id => "multi"  } %>
		 
		
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary"> <%= f.submit :submit %></button>
      </div>
    </div>
  </div>
</div>
<% end %>
